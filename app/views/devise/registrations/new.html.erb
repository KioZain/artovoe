<div class="W_AuthForm">
  <div class="A_Plate"></div>
  <div class="W_RegFormCounter">
    <div class="M_RegistrationCounter">
      <div class="A_Counter active">
        <div class="Q_Counter">
          <h4>1</h4>
        </div>
        <h4 class="footnote">Почта <br>
          и пароль</h4>
      </div>
      <hr>
      <div class="A_Counter">
        <div class="Q_Counter">
          <h4>2</h4>
        </div>
        <h4 class="footnote">Создание <br>
          профиля</h4>
      </div>
      <hr>
      <div class="A_Counter">
        <div class="Q_Counter">
          <h4>3</h4>
        </div>
        <p class="footnote">Добавление <br>
          контактов</p>
      </div>
    </div>
    <div class="O_AuthForm">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="M_FormLabel">
          <%= f.label :email, "Ваш Email" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "A_Form" , placeholder: "Введите email" %>
        </div>
        <div class="M_FormLabel">
          <%= f.label :password,"Пароль" %>
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "A_Form", placeholder: "Введите пароль" %>
        </div>
        <div class="M_FormLabel">
          <%= f.label :password_confirmation,"Подтверждение пароля" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "A_Form", placeholder: "Введите пароль" %>
        </div>
        <div class="actions">
          <%= f.submit "Далее", class: "A_Button medium green" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="A_Plate"></div>
</div>