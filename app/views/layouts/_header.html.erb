<header class="S_Header">
  <div class="O_HeaderMenu">
    <div class="Q_SharpPoint"></div>
    <div class="Q_SharpPoint"></div>
    <%= link_to root_path do %>
      <div class="A_Logo"></div>
    <% end%>
    <%# Admin link %>
    <div class="M_LinksInner">
      <div class="W_NavLinks">
        <%= link_to "Работы", posts_url,class: "nav_link" %>
        <%= link_to "Художники", profiles_path,class: "nav_link" %>
      </div>
      <nav class="C_Links">
        <% if user_signed_in? %>
          <%= link_to "Выйти", destroy_user_session_path, data: { "turbo-method": :delete }%>
        <% else %>
        <% end %>
      </nav>
      <img src="/assets/etc/Q_Search.svg" alt="">
    </div>
    <% if current_user%>
      <div class="W_UserOptions">
        <div class="A_Button">
          <%= link_to "Публикация", new_admin_post_path,style: "text-decoration: none"; %>
        </div>
        <%= link_to profile_path(current_user.profile) do %>
          <%= image_tag(current_user.profile.avatar_url, class: "A_Avatar") if current_user.profile&.avatar_url.present? %>
        <% end %>
      </div>
    <% else %>
      <div class="A_Button Q_ActionButtonBlack">
        <%= link_to "Войти", new_user_session_path %>
      </div>
    <% end %>
  </div>
</header>
