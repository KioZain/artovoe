<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="A_Form">
    <%= form.label :name, "Имя", style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div class="A_Form">
    <%= form.label :bio, "Описание", style: "display: block" %>
    <%= form.text_area :bio %>
  </div>
  <div class="A_Form">
    <%= form.label :contact, "Контакты", style: "display: block" %>
    <%= form.text_field :contact %>
  </div>
  <div class="A_Form">
    <%= form.label :avatar, "Фотография профиля", style: "display: block" %>
    <%= form.file_field :avatar %>
  </div>
  <div>
    <%= form.submit "Сохранить", class: "A_Button", style: "background-color: #faf3eb; margin-top: 2rem " %>
  </div>
