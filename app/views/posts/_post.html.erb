<!-- Image -->
<%= link_to post_path(post), class: "Q_PostImageLink" do %>
  <div class="Q_PostWrapper aspect-<%= post.aspect_ratio.gsub(':', '-') %>">
    <%= image_tag post.post_image.url, class: "Q_PostImage" %>
  </div>
<% end %>
<!-- Category -->
<div class="A_Category" style="margin-top: 1rem;">
  <% post.categories.each do |category| %>
    <%= link_to category, tagged_posts_path(category), class: "caption" %>
  <% end %>
</div>
<!-- PostBio -->
<div class="M_SubText">
  <%= link_to post_path(post), class: "A_PostTitleLink" do %>
    <h4 class="subtitle"><%= post.title %></h4>
  <% end %>
  <p class="caption"><%= post.user.profile.name %></p>
</div>
